{
  "name": "attendance-management-web",
  "version": "1.0.0",
  "description": "출석 관리 시스템 웹 버전",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "server:dev": "cross-env PORT=5001 DB_PATH=server/database/management_system_dev.db nodemon server/index.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "start": "node server/index.js",
    "install-all": "npm install && cd client && npm install"
  },
  "keywords": [
    "attendance",
    "management",
    "react",
    "nodejs"
  ],
  "author": "출석관리시스템",
  "license": "MIT",
  "dependencies": {
    "@tanstack/react-query": "^5.90.16",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "csv-parser": "^3.0.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-telegram-bot-api": "^0.66.0",
    "sqlite3": "^5.1.7",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "cross-env": "^10.1.0",
    "nodemon": "^3.0.1"
  }
}
